#:kivy 2.0.0

<TextInput>:
    background_color: .25, .25, .25, 1
    foreground_color: .75, .75, .75, 1
    cursor_color: .75, .75, .75, 1
    valign: "middle"

<Label>:
    color: .75, .75, .75, 1
    valign: "middle"

<TimerScreen>:
    time: time
    scramble: scramble
    left_panel: left_panel

    Widget:
        id: background
        size: root.width, root.height
        canvas:
            Color:
                rgba: 51/255, 51/255, 51/255, 1
            Rectangle:
                size: background.width, background.height

    GridLayout:
        cols: 2
        size: root.width, root.height

        FloatLayout:
            size_hint: 0.1175, 1
            Widget:
                id: left_panel
                size_hint: 1, 1
                canvas:
                    Color:
                        rgba: 38/255, 38/255, 38/255, 1

                    Rectangle:
                        size: left_panel.width, left_panel.height
            Label:
                id: title
                font_size: 30
                color: 122/255, 28/255, 1, 1
                size_hint: 1, 0.06
                pos_hint: {'center_x': .5,'center_y': .86}
                font_name: root.title_font
                text: 'Lotus'
            
            Image:
                id: logo
                size_hint_x: .68
                pos_hint: {'center_x': .5, 'center_y': .93}
                source: root.assets + 'logo.png'
    
        FloatLayout:
            TextInput:
                id: time
                pos_hint: {'center_x': .5, 'y': .6}
                size_hint: 0.4, 0.15
                halign: 'center'
                multiline: False
                font_size: 70
                on_text_validate: root.enter_time()

            Label:
                id: scramble
                size_hint: 1, .15
                pos_hint: {'center_x': .5, 'y': .75} 
                halign: 'center'
                font_size: 30

            Widget:
                id: time_box
                size_hint: .42, .4
                pos_hint: {'center_x': .25, 'y': .05}

                canvas:
                    Color:
                        rgba: 38/255, 38/255, 38/255, 1
                    RoundedRectangle:
                        size: time_box.width, time_box.height
                        pos: time_box.x, time_box.y
                        radius: [12, 12, 12, 12]
                        
            
            Widget:
                id: stat_box
                size_hint: .42, .4
                pos_hint: {'center_x': .75, 'y': .05}

                canvas:
                    Color:
                        rgba: 38/255, 38/255, 38/255, 1
                    RoundedRectangle:
                        size: stat_box.width, stat_box.height
                        pos: stat_box.x, stat_box.y
                        radius: [12, 12, 12, 12]